use_frameworks!

platform :ios, '13.0'

target 'crowdplaysdk_Example' do
  pod 'crowdplaysdk', :path => '../'
  
  pod 'Firebase', '~> 10.22.0'
  pod 'FirebaseAuth', '~> 10.22.0'
  pod 'FirebaseStorage', '~> 10.22.0'
  pod 'FirebaseDatabase', '~> 10.22.0'
  pod 'FirebaseMessaging', '~> 10.22.0'
  pod 'GoogleUtilities', '~> 7.11'

  target 'crowdplaysdk_Tests' do
    inherit! :search_paths

    pod 'Quick', '~> 2.2.0'
    pod 'Nimble', '~> 12.0'
    pod 'Nimble-Snapshots' , '~> 9.6.1'
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
     target.build_configurations.each do |config|
       config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
     end
  end
end
